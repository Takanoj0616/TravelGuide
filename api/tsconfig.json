{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "../",  // ← プロジェクト全体を含むように変更
    "baseUrl": "../"   // ← importの相対パス補助にも使える
  },
  "include": [
    "../api/**/*.ts",  // ← すべてのapiフォルダ内
    "../src/**/*.ts"   // ← firebaseなど外部設定を含める
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext"
    }
  }
}